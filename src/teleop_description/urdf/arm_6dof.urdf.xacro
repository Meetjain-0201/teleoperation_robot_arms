<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arm_6dof">
  
  <!-- Arguments -->
  <xacro:arg name="arm_id" default="master"/>
  <xacro:arg name="initial_positions_file" default="initial_positions.yaml"/>
  
  <!-- Parameters -->
  <xacro:property name="arm_id" value="$(arg arm_id)" />
  <xacro:property name="PI" value="3.14159265359"/>
  
  <!-- Materials -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  
  <!-- Base Link -->
  <link name="${arm_id}_base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Link 1 -->
  <link name="${arm_id}_link1">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1 (Base rotation - Z axis) -->
  <joint name="${arm_id}_joint1" type="revolute">
    <parent link="${arm_id}_base_link"/>
    <child link="${arm_id}_link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100.0" lower="${-PI}" upper="${PI}" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <!-- Link 2 -->
  <link name="${arm_id}_link2">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 2 (Shoulder - Y axis) -->
  <joint name="${arm_id}_joint2" type="revolute">
    <parent link="${arm_id}_link1"/>
    <child link="${arm_id}_link2"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100.0" lower="${-PI/2}" upper="${PI/2}" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <!-- Link 3 -->
  <link name="${arm_id}_link3">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Joint 3 (Elbow - Y axis) -->
  <joint name="${arm_id}_joint3" type="revolute">
    <parent link="${arm_id}_link2"/>
    <child link="${arm_id}_link3"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="50.0" lower="${-PI}" upper="${PI}" velocity="2.0"/>
    <dynamics damping="0.3" friction="0.3"/>
  </joint>

  <!-- Link 4 -->
  <link name="${arm_id}_link4">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.025" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>

  <!-- Joint 4 (Wrist roll - Z axis) -->
  <joint name="${arm_id}_joint4" type="revolute">
    <parent link="${arm_id}_link3"/>
    <child link="${arm_id}_link4"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="25.0" lower="${-PI}" upper="${PI}" velocity="3.0"/>
    <dynamics damping="0.2" friction="0.2"/>
  </joint>

  <!-- Link 5 -->
  <link name="${arm_id}_link5">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Joint 5 (Wrist pitch - Y axis) -->
  <joint name="${arm_id}_joint5" type="revolute">
    <parent link="${arm_id}_link4"/>
    <child link="${arm_id}_link5"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="25.0" lower="${-PI/2}" upper="${PI/2}" velocity="3.0"/>
    <dynamics damping="0.2" friction="0.2"/>
  </joint>

  <!-- Link 6 (End-effector) -->
  <link name="${arm_id}_link6">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0003" ixy="0.0" ixz="0.0" iyy="0.0003" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 6 (Wrist yaw - Z axis) -->
  <joint name="${arm_id}_joint6" type="revolute">
    <parent link="${arm_id}_link5"/>
    <child link="${arm_id}_link6"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="${-PI}" upper="${PI}" velocity="3.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- End-effector link (for tool center point) -->
  <link name="${arm_id}_ee_link">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- End-effector joint -->
  <joint name="${arm_id}_ee_joint" type="fixed">
    <parent link="${arm_id}_link6"/>
    <child link="${arm_id}_ee_link"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>

</robot>
