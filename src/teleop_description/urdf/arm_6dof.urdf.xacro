<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- Define a macro for 6-DOF arm that can be instantiated with different prefixes -->
  <xacro:macro name="arm_6dof" params="prefix">
    
    <xacro:property name="PI" value="3.14159265359"/>
    
    <!-- Materials -->
    <material name="${prefix}_black">
      <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    <material name="${prefix}_blue">
      <color rgba="0.0 0.0 0.8 1.0"/>
    </material>
    <material name="${prefix}_green">
      <color rgba="0.0 0.8 0.0 1.0"/>
    </material>
    
    <!-- Base Link -->
    <link name="${prefix}_base_link">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <material name="${prefix}_black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Link 1 -->
    <link name="${prefix}_link1">
      <visual>
        <geometry>
          <cylinder radius="0.04" length="0.3"/>
        </geometry>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <material name="${prefix}_blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.04" length="0.3"/>
        </geometry>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Joint 1 -->
    <joint name="${prefix}_joint1" type="revolute">
      <parent link="${prefix}_base_link"/>
      <child link="${prefix}_link1"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="100.0" lower="${-PI}" upper="${PI}" velocity="2.0"/>
      <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- Link 2 -->
    <link name="${prefix}_link2">
      <visual>
        <geometry>
          <cylinder radius="0.035" length="0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <material name="${prefix}_green"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.035" length="0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.4"/>
        <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Joint 2 -->
    <joint name="${prefix}_joint2" type="revolute">
      <parent link="${prefix}_link1"/>
      <child link="${prefix}_link2"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100.0" lower="${-PI/2}" upper="${PI/2}" velocity="2.0"/>
      <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- Link 3 -->
    <link name="${prefix}_link3">
      <visual>
        <geometry>
          <cylinder radius="0.03" length="0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <material name="${prefix}_blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.03" length="0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.3"/>
        <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.0005"/>
      </inertial>
    </link>

    <!-- Joint 3 -->
    <joint name="${prefix}_joint3" type="revolute">
      <parent link="${prefix}_link2"/>
      <child link="${prefix}_link3"/>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="50.0" lower="${-PI}" upper="${PI}" velocity="2.0"/>
      <dynamics damping="0.3" friction="0.3"/>
    </joint>

    <!-- Link 4 -->
    <link name="${prefix}_link4">
      <visual>
        <geometry>
          <cylinder radius="0.025" length="0.15"/>
        </geometry>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <material name="${prefix}_green"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.025" length="0.15"/>
        </geometry>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0003"/>
      </inertial>
    </link>

    <!-- Joint 4 -->
    <joint name="${prefix}_joint4" type="revolute">
      <parent link="${prefix}_link3"/>
      <child link="${prefix}_link4"/>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="25.0" lower="${-PI}" upper="${PI}" velocity="3.0"/>
      <dynamics damping="0.2" friction="0.2"/>
    </joint>

    <!-- Link 5 -->
    <link name="${prefix}_link5">
      <visual>
        <geometry>
          <cylinder radius="0.02" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <material name="${prefix}_blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.02" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.15"/>
        <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0002"/>
      </inertial>
    </link>

    <!-- Joint 5 -->
    <joint name="${prefix}_joint5" type="revolute">
      <parent link="${prefix}_link4"/>
      <child link="${prefix}_link5"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="25.0" lower="${-PI/2}" upper="${PI/2}" velocity="3.0"/>
      <dynamics damping="0.2" friction="0.2"/>
    </joint>

    <!-- Link 6 -->
    <link name="${prefix}_link6">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.08"/>
        </geometry>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <material name="${prefix}_green"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.015" length="0.08"/>
        </geometry>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0003" ixy="0.0" ixz="0.0" iyy="0.0003" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Joint 6 -->
    <joint name="${prefix}_joint6" type="revolute">
      <parent link="${prefix}_link5"/>
      <child link="${prefix}_link6"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="10.0" lower="${-PI}" upper="${PI}" velocity="3.0"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- End-effector link -->
    <link name="${prefix}_ee_link">
      <visual>
        <geometry>
          <sphere radius="0.01"/>
        </geometry>
        <material name="${prefix}_black"/>
      </visual>
    </link>

    <!-- End-effector joint -->
    <joint name="${prefix}_ee_joint" type="fixed">
      <parent link="${prefix}_link6"/>
      <child link="${prefix}_ee_link"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
    </joint>

  </xacro:macro>

</robot>
